2)建立b_m_exm_role_func表，字段为
CREATE TABLE "EXAMINE"."B_M_EXM_ROLE_FUNC" 
   (	"ROLEID" VARCHAR2(20 BYTE), 
	"NAME" VARCHAR2(40 BYTE), 
	"ICONCLS" VARCHAR2(40 BYTE), 
	"MODULE" VARCHAR2(20 BYTE)
   )
1)新b_m_exm_func_info
ALTER TABLE EXAMINE.B_M_EXM_FUNC_INFO
 DROP PRIMARY KEY CASCADE;

DROP TABLE EXAMINE.B_M_EXM_FUNC_INFO CASCADE CONSTRAINTS;

CREATE TABLE EXAMINE.B_M_EXM_FUNC_INFO
(
  NAME      VARCHAR2(40 BYTE)                   NOT NULL,
  ICONCLS   VARCHAR2(40 BYTE)                   NOT NULL,
  MODULE    VARCHAR2(40 BYTE)                   NOT NULL,
  COMMENTS  VARCHAR2(200 BYTE),
  CLASS     VARCHAR2(40 BYTE)                   NOT NULL,
  ID        VARCHAR2(40 BYTE),
  APPSCOPE  VARCHAR2(10 BYTE)
)
TABLESPACE USERS
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE EXAMINE.B_M_EXM_FUNC_INFO IS '存放用户可使用的功能信息';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.NAME IS '功能名';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.ICONCLS IS '功能的css类';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.MODULE IS '模块名';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.COMMENTS IS '功能描述';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.CLASS IS '模块类名';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.ID IS '应用唯一标识';

COMMENT ON COLUMN EXAMINE.B_M_EXM_FUNC_INFO.APPSCOPE IS '作用范围';



CREATE UNIQUE INDEX EXAMINE.B_M_EXM_FUNC_INFO_PK ON EXAMINE.B_M_EXM_FUNC_INFO
(ID)
LOGGING
TABLESPACE USERS
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE EXAMINE.B_M_EXM_FUNC_INFO ADD (
  CONSTRAINT B_M_EXM_FUNC_INFO_PK
  PRIMARY KEY
  (ID)
  USING INDEX EXAMINE.B_M_EXM_FUNC_INFO_PK
  ENABLE VALIDATE);

ALTER TABLE EXAMINE.B_M_EXM_ROLE_FUNC
 DROP PRIMARY KEY CASCADE;

DROP TABLE EXAMINE.B_M_EXM_ROLE_FUNC CASCADE CONSTRAINTS;

CREATE TABLE EXAMINE.B_M_EXM_ROLE_FUNC
(
  ROLEID  VARCHAR2(20 BYTE)                     NOT NULL,
  NAME    VARCHAR2(40 BYTE)                     NOT NULL
)
TABLESPACE USERS
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE EXAMINE.B_M_EXM_ROLE_FUNC IS '角色与功能对照关系';

COMMENT ON COLUMN EXAMINE.B_M_EXM_ROLE_FUNC.ROLEID IS '角色编号';

COMMENT ON COLUMN EXAMINE.B_M_EXM_ROLE_FUNC.NAME IS '功能名';



CREATE UNIQUE INDEX EXAMINE.B_M_EXM_ROLE_FUNC_PK ON EXAMINE.B_M_EXM_ROLE_FUNC
(ROLEID, NAME)
LOGGING
TABLESPACE USERS
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE EXAMINE.B_M_EXM_ROLE_FUNC ADD (
  CONSTRAINT B_M_EXM_ROLE_FUNC_PK
  PRIMARY KEY
  (ROLEID, NAME)
  USING INDEX EXAMINE.B_M_EXM_ROLE_FUNC_PK
  ENABLE VALIDATE);


